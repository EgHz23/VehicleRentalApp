@{
    ViewData["Title"] = "Welcome to Vehicle Rental App";
}

<div class="container mt-5">
    <div class="row align-items-center">
        <div class="col-md-6">
            <h1 class="display-4">Find Your Perfect Ride</h1>
            <p class="lead">
                Welcome to the Vehicle Rental App, your go-to platform for renting and sharing vehicles. 
                Browse through available cars, connect with owners, and enjoy hassle-free rentals at competitive prices.
            </p>
            <a href="/Vehicles" class="btn btn-primary btn-lg">View Vehicles</a>
            <a href="/Identity/Account/Register" class="btn btn-outline-secondary btn-lg">Get Started</a>
        </div>
        <div class="col-md-6">
            <img src="https://via.placeholder.com/600x400" class="img-fluid rounded" alt="Vehicle Rental" />
        </div>
    </div>

    <hr class="my-5">

    <div class="row text-center">
        <h2>Why Choose Us?</h2>
    </div>

    <div class="row mt-4">
        <div class="col-md-4 text-center">
            <img src="https://via.placeholder.com/150" class="mb-3 rounded-circle" alt="Affordable Prices">
            <h4>Affordable Prices</h4>
            <p>Enjoy competitive rental rates without compromising on quality or convenience.</p>
        </div>
        <div class="col-md-4 text-center">
            <img src="https://via.placeholder.com/150" class="mb-3 rounded-circle" alt="Wide Selection">
            <h4>Wide Selection</h4>
            <p>Choose from a wide variety of vehicles to suit your needs and preferences.</p>
        </div>
        <div class="col-md-4 text-center">
            <img src="https://via.placeholder.com/150" class="mb-3 rounded-circle" alt="Easy Booking">
            <h4>Easy Booking</h4>
            <p>Book your vehicle in just a few clicks with our user-friendly platform.</p>
        </div>
    </div>
</div>
