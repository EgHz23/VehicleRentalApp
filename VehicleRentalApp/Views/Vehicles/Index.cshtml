@model IEnumerable<VehicleRentalApp.Models.Vehicle>

<div class="container mt-5">
    <h1 class="text-center">Available Vehicles</h1>
    <hr />
    <div class="row">
        @foreach (var vehicle in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <img src="@vehicle.ImagePath" class="card-img-top" alt="@vehicle.Brand @vehicle.Model" />
                    <div class="card-body">
                        <h5 class="card-title">@vehicle.Brand @vehicle.Model</h5>
                        <p>Year: @vehicle.Year</p>
                        <p>Price per day: $@vehicle.PricePerDay</p>
                        <p>Average Rating: @(vehicle.AverageRating?.ToString("0.0") ?? "No rating")</p>
                        <a asp-action="Details" asp-route-id="@vehicle.Id" class="btn btn-primary">Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
