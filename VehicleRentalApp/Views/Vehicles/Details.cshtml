@model VehicleRentalApp.Models.Vehicle

<div class="container mt-5">
    <h1 class="text-center">@Model.Brand @Model.Model</h1>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImagePath" class="img-fluid" alt="@Model.Brand @Model.Model" />
        </div>
        <div class="col-md-6">
            <p><strong>Price per day:</strong> $@Model.PricePerDay</p>
            <p><strong>Year:</strong> @Model.Year</p>
            <p><strong>License Plate:</strong> @Model.LicensePlate</p>
            <p><strong>Availability:</strong> @(Model.IsAvailable ? "Available" : "Not Available")</p>
        </div>
    </div>
</div>
