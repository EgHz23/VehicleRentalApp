@model IEnumerable<VehicleRentalApp.Models.Vehicle>

@{
    ViewData["Title"] = "My Vehicles";
}

<div class="container mt-5">
    <h1 class="text-center">My Vehicles</h1>
    <hr />
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="row">
        @foreach (var vehicle in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <img src="@(vehicle.ImagePath ?? "https://via.placeholder.com/300x200")" class="card-img-top" alt="@vehicle.Brand @vehicle.Model">
                    <div class="card-body">
                        <h5 class="card-title">@vehicle.Brand @vehicle.Model</h5>
                        <p class="card-text">Year: @vehicle.Year</p>
                        <p class="card-text">Price per day: $@vehicle.PricePerDay</p>
                        <form asp-action="Delete" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@vehicle.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
